<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/category_backround"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/holder_category_image"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/patesry" />
    <TextView
        android:id="@+id/holder_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_below="@+id/holder_category_image"
        android:text="patsries"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"

    />

</RelativeLayout>