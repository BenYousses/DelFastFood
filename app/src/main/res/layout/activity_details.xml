<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserActivities.Details_Activity">

    <RelativeLayout
        android:id="@+id/details_food_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orange_50"
        android:elevation="10dp"
        >

        <ImageButton
            android:id="@+id/details_back_btn"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:background="@color/transparant"
            android:src="@drawable/arrow_back_icon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Details"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/details_food_pic"
        android:layout_width="295dp"
        android:layout_height="279dp"
        android:layout_below="@+id/details_food_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/patesry"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_food_pic"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/details_card_backround">

        <TextView
            android:id="@+id/details_food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/numCard_control"
            android:layout_width="205dp"
            android:layout_height="36dp"
            android:layout_below="@+id/details_food_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_backround">

            <TextView
                android:id="@+id/details_food_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:drawableRight="@drawable/money_icon"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/orange_btns_backround">

                <ImageButton
                    android:id="@+id/details_plus_numCard_btn"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/orange_btns_backround"
                    android:src="@drawable/black_add_icon" />

                <ImageButton
                    android:id="@+id/details_minus_numCard_btn"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/orange_btns_backround"
                    android:src="@drawable/black_minus_icon" />

                <TextView
                    android:id="@+id/details_numCard_text"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/white_btns_backround"
                    android:gravity="center"
                    android:fontFamily="serif"

                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/details_food_Likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numCard_control"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/red_full_heart"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_food_Calory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numCard_control"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/red_calories_icon"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_food_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numCard_control"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/time_icon"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
<TextView
    android:id="@+id/description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
android:layout_marginStart="25dp"
    android:text="Descripyion :"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="20sp"
    android:fontFamily="serif"
    android:layout_below="@+id/details_food_Time"/>

        <TextView
            android:id="@+id/details_food_Description"
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/category_backround"
            android:padding="10dp"
            android:text="Description..."
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="245dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/gray_backround"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/details_total_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_food_Time"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:paddingStart="5dp"
                android:text="Total Price"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/details_total_price_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_food_Time"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/money_icon"
                android:gravity="center|left"
                android:paddingStart="5dp"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="71dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/yollow_backround"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_addToCard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_food_Time"
                android:layout_alignParentBottom="true"
                android:drawableRight="@drawable/add_tocard_icon"
                android:gravity="center"
                android:text="Add To Card  "
                android:textColor="@color/white"
                android:textSize="21sp"
                android:fontFamily="serif"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/draggable_text"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:layout_marginEnd="8dp"
        android:background="@drawable/orange_btns_backround">
        <TextView
            android:id="@+id/details_cards_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_notification_overlay"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:text="+10"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/cards_Images"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/black_card_icon"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>