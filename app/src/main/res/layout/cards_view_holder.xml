<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/category_backround"
    android:layout_margin="5dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/card_food_pic_VH"
        android:layout_width="60dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/patesry"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/card_food_title_VH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patessry"
        android:fontFamily="serif"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/card_food_pic_VH"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/card_food_price_VH"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/card_food_title_VH"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/card_food_pic_VH"
        android:gravity="center"
        android:fontFamily="serif"
        android:text="122 $"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/orange_btns_backround">

        <ImageButton
            android:id="@+id/card_plus_numCard_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/orange_btns_backround"
            android:src="@drawable/black_add_icon" />

        <ImageButton
            android:id="@+id/card_minus_numCard_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/orange_btns_backround"
            android:src="@drawable/black_minus_icon" />

        <TextView
            android:id="@+id/card_numCard_text"
            android:layout_width="44dp"

            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_btns_backround"
            android:gravity="center"
            android:text="100"
            android:fontFamily="serif"

            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/card_food_total_price_VH"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:text="100 $"
        android:textStyle="bold"
        android:layout_marginEnd="25dp"
        android:fontFamily="serif"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>